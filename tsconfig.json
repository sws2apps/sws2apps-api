{
	"compilerOptions": {
		"target": "ES2020",
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"sourceMap": false,
		"outDir": "./dist",
		"strict": true,
		"skipLibCheck": true,
		"allowJs": true,
		"checkJs": false
	},
	"include": ["src/**/*.ts", "src/**/*.js"],
	"exclude": ["node_modules", "dist"]
}
