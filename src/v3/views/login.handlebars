<html lang='en'>

<head>
  <meta charset='UTF-8' />
  <meta name='viewport' content='width=device-width, initial-scale=1.0' />
  <title>Document</title>

  <style>
    body {
      color: black;
    }

    h2 {
      margin: 0;
      padding: 0;
      font-weight: 550;
      font-size: 20px;
    }

    h3 {
      margin: 0;
      padding: 0;
      font-weight: 550;
      font-size: 18px;
    }

    h4,
    .h4 {
      margin: 0;
      padding: 0;
      font-weight: 550;
      font-size: 16px;
    }

    p {
      margin: 0;
      padding: 0;
      font-weight: 420;
      font-size: 16px;
    }

    a {
      margin: 0;
      padding: 0;
      font-weight: 550;
      font-size: 14px;
      color: #3b4ca3;
      text-decoration: none;
    }

    .mail-content {
      font-family: Roboto, 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: #fefefe;
      border: 1px solid #dadada;
      max-width: 600px;
      width: 100%;
      margin: 0 auto;
      border-radius: 12px;
      color: inherit;
    }

    .branding {
      padding: 24px 32px 24px 32px;
    }

    .logo {
      width: 40px;
      height: 40px;
    }

    .login-title {
      padding: 0px 32px;
    }

    .login-button {
      text-align: center;
      background-color: #5065d0;
      height: 44px;
      line-height: 44px;
      color: #fefefe !important;
      font-size: 15px;
      text-transform: uppercase;
      font-weight: 500;
      border-radius: 8px;
    }

    .footer-container {
      padding: 24px 32px;
      background-color: #f5f5f5;
      height: 24px;
    }

    .copyright {
      color: #505050;
    }
  </style>
</head>

<body>
  <div class='mail-content'>
    <table style="width:100%">
      <tr>
        <th style="width: 100%" />
      </tr>
      <tr>
        <td>
          <div class="branding">
            <table>
              <tr>
                <td>
                  <img class="logo" alt="logo"
                    src='https://res.cloudinary.com/dzgxumpdu/image/upload/v1728831816/logo_dya69r.png' />
                </td>
                <td style="vertical-align: middle;">
                  <h2 style="margin-left: 8px;">Organized</h2>
                </td>
              </tr>
            </table>
          </div>
        </td>
      </tr>
      <tr>
        <td>
          <h2 class="login-title">{{ loginTitle }}</h2>
        </td>
      </tr>
      <tr>
        <td style="padding: 24px 32px">
          <div style="padding: 24px; background-color: #f2f5ff; border-radius: 12px;">
            <p style="margin-bottom: 16px;">{{ loginDesc }}</p>
            <a href={{ link }} target="_blank" rel="noreferrer">
              <p class="login-button">
                {{loginButton}}
              </p>
            </a>
          </div>
        </td>
      </tr>
      <tr>
        <td style="padding: 0px 32px 16px 32px">
          <p style="font-weight: 400; font-size: 14px; color: #505050;">{{ loginAltText }}</p>
        </td>
      </tr>
      <tr>
        <td style="padding: 0px 32px 24px 32px">
          <a href={{ link }} target="_blank" rel="noreferrer" style="word-break: break-all;">{{ link }}</a>
        </td>
      </tr>
      <tr>
        <td style="padding: 0px 32px 24px 32px">
          <p style="font-weight: 520;">{{ loginIgnoreText }}</p>
        </td>
      </tr>
      <tr>
        <td>
          <div class='footer-container'>
            <h4 class="copyright">Â© {{ copyright }} Organized app</h4>
          </div>
        </td>
      </tr>
    </table>
  </div>
</body>

</html>